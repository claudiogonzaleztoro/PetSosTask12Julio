<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="PeT SoS"
        android:textColor="@android:color/holo_orange_dark"

        style="@style/AudioFileInfoOverlayText"

        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:paddingBottom="30dp"
        android:paddingTop="40dp" />

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="200px"
        android:src="@drawable/mascotas_login"

        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="40dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            >

        <TextView
            android:visibility="invisible"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_orange"
            android:gravity="center"
            android:text="Save Pet"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:autoText="false" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:background="@drawable/pata_2"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/myPetTextView"
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"

                android:gravity="center"
                android:text="My Pets"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="right"
            android:background="@drawable/pata_3"
            android:layout_marginLeft="20dp"
            >

            <TextView

                android:id="@+id/savePetTextView"
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Save Pet"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            >

        <TextView
            android:visibility="invisible"
            android:layout_below="@id/myPetTextView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_orange"
            android:gravity="center"
            android:text="Save Pet"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_marginRight="50px"

        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:background="@drawable/pata_1"
            >


            <TextView
                android:id="@+id/profileTextView"
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/pata_perro_down"
            android:id="@+id/petAlertLinearLayout"
        >
            <TextView

                android:id="@+id/petAlertTextView"
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Pet Alert"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:background="@drawable/pata_4"


            >

            <!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:background="@drawable/pata_1"
                >-->

            <TextView


                android:id="@+id/foundLostTextView"
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Found or Lost"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>





</LinearLayout>
    </ScrollView>